// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  /* General */
  // General Settings
  "confirm_quit": true,
  /* Appearance */
  // Theme
  "theme": "Catppuccin Macchiato",
  "icon_theme": "Catppuccin Macchiato",
  // Buffer Font
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 13.0,
  "buffer_font_features": {
    "calt": false, // ligatures
    "cv01": true, // remove gaps
    "cv34": true, // alternative italic k
    "cv35": true, // alternative italic l
    "cv37": true // alternative italic y
  },
  /* Keymap */
  // Modal Editing
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true
  },
  /* Editor */
  // Scrolling
  "scroll_beyond_last_line": "off",
  "vertical_scroll_margin": 0,
  "scroll_sensitivity": 3.0,
  // Edit Predictions
  "edit_predictions": {
    "mode": "subtle"
  },
  // Drag And Drop Selection
  "drag_and_drop_selection": {
    "enabled": false
  },
  // Toolbar
  "toolbar": {
    "quick_actions": false
  },
  // Wrapping
  "soft_wrap": "editor_width",
  // Formatting
  "format_on_save": "off",
  // Miscellaneous
  "middle_click_paste": false,
  "colorize_brackets": true,
  /* Languages & Tools */
  // Inline Diagnostics
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  /* Search & Files */
  // Search
  "seed_search_query_from_cursor": "selection",
  // File Scan
  "close_on_file_delete": true,
  /* Window & Layout */
  // Status Bar
  "search": {
    "button": false,
    "center_on_match": true
  },
  // TabBar
  "tab_bar": {
    "show": false
  },
  /* Panels */
  // Git Panel
  "git_panel": {
    "tree_view": true
  },
  // Notification Panel
  "notification_panel": {
    "button": false
  },
  // Collaboration Panel
  "collaboration_panel": {
    "button": false
  },
  /* Terminal */
  "terminal": {
    "font_features": {
      "calt": false, // ligatures
      "cv01": true, // remove gaps
      "cv34": true, // alternative italic k
      "cv35": true, // alternative italic l
      "cv37": true // alternative italic y
    }
  },
  /* Version Control */
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  /* AI */
  // Agent Configuration
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner"
    },
    "always_allow_tool_actions": true
  }
}
