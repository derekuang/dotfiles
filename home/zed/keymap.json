// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-shift-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "VimControl || !Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-shift-alt-h": "vim::ResizePaneLeft",
      "ctrl-shift-alt-j": "vim::ResizePaneDown",
      "ctrl-shift-alt-k": "vim::ResizePaneUp",
      "ctrl-shift-alt-l": "vim::ResizePaneRight",
    }
  },
  {
    "context": "Editor && !menu",
    "bindings": {
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-alt-h": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],
      "ctrl-alt-j": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ],
      "ctrl-alt-k": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],
      "ctrl-alt-l": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "ctrl-d": ["workspace::SendKeystrokes", "5 g j 5 ctrl-e"],
      "ctrl-u": ["workspace::SendKeystrokes", "5 g k 5 ctrl-y"],
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-y": "vim::YankToEndOfLine"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-x": "vim::Exchange"
    }
  }
]
